{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // Attach and debug running ROS2 node
        {
            "name": "ROS: Attach",
            "type": "ros",
            "request": "attach"
        },
        // Launch a python file
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        },
        // Example gdb launch of a ros executable
        {
            "name": "ROS2: Run Node (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/../install/${input:package}/lib/${input:package}/${input:program}",
            "args": [],
            "preLaunchTask": "build",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        //Example of a ROS Launch file
        {
            "name": "ROS2: Launch File",
            "type": "ros",
            "request": "launch",
            "preLaunchTask": "build",
            "target": "${workspaceFolder}/../install/${input:package}/share/${input:package}/launch/${input:ros_launch}",
        },
    ],
    "inputs": [
        {
            "id": "package",
            "type": "promptString",
            "description": "Package name",
            "default": "object_detector_tensorflow"
        },
        {
            "id": "program",
            "type": "promptString",
            "description": "Program name",
            "default": "detect_and_transform_node"
        },
        {
            "id": "ros_launch",
            "type": "promptString",
            "description": "ROS launch name",
            "default": "detect_and_transform.launch.py"
        }
    ]
}